<h2>Admin Dashboard</h2>

<div class="admin-links">
  <p>Admin Links:</p>
  <%= link_to "Dashboard", admin__index_path %>
  <%= link_to "Merchants", admin_merchants_path %>
  <%= link_to "Invoices", admin_invoices_path %>
</div>

<h3>Top Customers</h3>
<ol>
  <% Customer.admin_top_five_customers.each do |customer| %>
    <li><%= "#{customer.first_name} " "#{customer.last_name} " "#{customer.transaction_count}"%></li>
  <% end %>
</ol>

<h3>Incomplete Invoices</h3>
<div class="row">
  <% Invoice.admin_incomplete_invoices.each do |invoice| %>
  <div class="card col-4">
    <%= link_to "Invoice # #{invoice.number}", "/admin/invoices/#{invoice.id}" %>
    <%= invoice.created_at.strftime("%A, %B %d, %Y") %><br>
  </div>
  <% end.uniq %>
</div>
