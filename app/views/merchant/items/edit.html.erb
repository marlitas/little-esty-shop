<h1><%= @item.name %></h1>
<%= form_with model: [:merchant, @item], local: true do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_field :description %>
  <%= f.label :unit_price, "Unit Price" %>
  <%= f.number_field :unit_price %>

  <%= f.submit "Update My Item" %>
<% end %>
